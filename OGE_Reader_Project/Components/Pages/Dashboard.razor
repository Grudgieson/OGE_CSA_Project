@page "/"

<PageTitle>Dashboard</PageTitle>

<MudGrid Spacing="0" Justify="Justify.Center">
    <MudItem xs="6">
        <div Class="ml-20">

            <MudText Typo="Typo.h4"Class="mt-8">Most Active User</MudText>
            <MudText Typo="Typo.subtitle1"Class="">@FileStorage.mostActiveHashID</MudText>

            <MudText Typo="Typo.h4"Class="mt-8">Most Active Reader</MudText>
            <MudText Typo="Typo.subtitle1"Class="">@FileStorage.mostActiveReader</MudText>

            <MudText Typo="Typo.h4"Class="mt-8">Busiest Day of The Week</MudText>
            <MudText Typo="Typo.subtitle1"Class="">@FileStorage.busiestDay</MudText>

            <MudText Typo="Typo.h4"Class="mt-8">Average Unique Visitors Per Day</MudText>
            <MudText Typo="Typo.subtitle1"Class="">@FileStorage.averageUniqueVisitorsPerDay</MudText>

        </div>
    </MudItem>

    <MudItem xs="6">
        <MudSimpleTable Class="mb-4" Style="width:800px" FixedHeader="true">
            <thead>
                <tr>
                    <th>Alert</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var alert in FileStorage.alertsList)
                {
                    <tr>
                        <td>@alert.alertType</td>
                        <td>@alert.alertDescription</td>
                    </tr>
                }
            </tbody>
        </MudSimpleTable>
    </MudItem>
</MudGrid>

<div class="ml-20">
    <MudText Typo="Typo.h6"Class="mt-8">Scan Activity Over (@FileStorage.chartFilter)</MudText>
    <MudChart ChartType="ChartType.Line" ChartSeries="@FileStorage.Series" XAxisLabels="@FileStorage.XAxisLabels" Width="1750px" Height="420px" ChartOptions="@FileStorage.Options" AxisChartOptions="@FileStorage.axisOptions"></MudChart>
</div>

